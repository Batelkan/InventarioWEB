

<div class="" layout="column" layout-align="center center">
    <link href="~/css/formArticulo.css" rel="stylesheet" />
    <div class="formArticulos md-whiteframe-6dp" layout="column" ng-cloak>
        <md-toolbar md-color="#2196F3" class="formArticulosToolBar">
            <div class="md-toolbar-tools">
                <h2 class="md-flex"><span class="mif-cart">  Ingresar Articulo Nuevo</h2>
            </div>
        </md-toolbar>
        <!--md-theme="TemaDark"-->
        <md-content layout="column" class="formArticulosContent" flex layout-padding>
            <div class="" layout="row" layout-align="space-between center">
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Articulo</label>
                    <input ng-model="articuloNombre">
                </md-input-container>
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Fabricante</label>
                    <input ng-model="articuloFabricante">
                </md-input-container>
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Serie</label>
                    <input ng-model="articuloSerie">
                </md-input-container>
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Modelo</label>
                    <input ng-model="articuloModelo">
                </md-input-container>
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Factura</label>
                    <input ng-model="articuloFactura">
                </md-input-container>
            </div>

            <div class="" layout="row" layout-align="space-between center">
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Proveedor</label>
                    <input ng-model="articuloProveedor">
                </md-input-container>
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Departamento</label>
                    <md-select ng-model="articuloDepto">
                        <md-option ng-repeat="depto in deptos" value="{{depto}}">{{depto}}</md-option>
                    </md-select>
                </md-input-container>
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Categoria</label>
                    <md-select ng-model="articuloCategoria">
                        <md-option ng-repeat="cat in categoria" value="{{cat}}">{{cat}}</md-option>
                    </md-select>
                </md-input-container>
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Estatus</label>
                    <md-select ng-model="articuloEstatus">
                        <md-option ng-repeat="est in estatus" value="{{est}}">{{est}}</md-option>
                    </md-select>
                </md-input-container>
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Cantidad</label>
                    <input ng-model="articuloCantidad" style="min-width: 180px;" type="number" step="1">
                </md-input-container>

            </div>

            <div class="" layout="row" layout-align="space-between center">
                <md-input-container layout="column" class="formArticuloCampo">
                    <label>Precio</label>
                    <input ng-model="articuloPrecio" style="min-width: 180px;" type="number" step="0.01">
                </md-input-container>
                <md-input-container class="formArticuloRichText">
                    <label>Descripcion</label>
                    <textarea ng-model="articuloDescripcion" md-maxlength="100" rows="3" md-select-on-focus></textarea>
                </md-input-container>
                <md-input-container class="formArticuloRichText">
                    <label>Observaciones</label>
                    <textarea ng-model="articuloObservaciones" md-maxlength="100" rows="3" md-select-on-focus></textarea>
                </md-input-container>
               
            </div>

        </md-content>
        <md-toolbar md-theme="TemaDark" layout="row" layout-align="end center" layout-fill class="formArticulosToolBarFeet">
            <md-button class="md-raised md-primary SumbmintThemeDark" ng-click="agregarArticulo()">Agregar</md-button>
        </md-toolbar>
    </div>

    <div>
        <table datatable="ng" class="row-border hover mdl-data-table " cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>ID Depto</th>
                    <th>Fabricante</th>
                    <th>Modelo</th>
                    <th>FechaAlta</th>
                    <th>Factura</th>
                    <th>Cantidad</th>
                    <th>CantidadDisponible</th>
                    @*<th>ID</th>
                    <th>ID Stock</th>
                    <th>ID Depto</th>
