                    <th>Serie</th>
                    <th>Modelo</th>
                    <th>Estatus</th>
                    <th>FechaAlta</th>
                    <th>Factura</th>
                    <th>Cantidad</th>
                    <th>CantidadDisponible</th>
                    <th>Descripcion</th>
                    <th>Observacion</th>*@
         
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="articulo in articulos">
                    <td>{{ articulo.ID }}</td>
                    <td>{{ articulo.ID_Depto }}</td>
                    <td>{{ articulo.Fabricante }}</td>
                    <td>{{ articulo.Modelo }}</td>
                    <td>{{ articulo.FechaAlta }}</td>
                    <td>{{ articulo.Factura }}</td>
                    <td>{{ articulo.Cantidad }}</td>
                    <td>{{ articulo.CantidadDisponible }}</td>

                </tr>

